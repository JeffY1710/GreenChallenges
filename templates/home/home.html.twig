{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <style>
        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(90px, 1fr));
            gap: 20px;
            margin-top: 50px;
        }

        .grid-item a{
                color: black;
        }

        .grid-item {
            border: 1px solid black;
            padding: 10px;
            background-color: #f0f0f0;
        }

        .title.h1 {
            margin-top: 0;
            color: black;
        }
    </style>

    <h1 class="title h1">♻️ Challenges disponibles</h1>
    <div class="grid-container">
        {% for defi in defis %}
            <div class="grid-item">
                <a href="{{ path('challenge_detail', {'id': defi.id}) }}">{{ defi.title }}</a>
                {# Ajoutez d'autres informations ici #}
            </div>
        {% endfor %}
    </div>
{% endblock %}